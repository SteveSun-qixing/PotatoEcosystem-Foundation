{
  "name": "@chips/foundation",
  "version": "1.0.0",
  "description": "薯片公共基础层 - 为薯片生态提供通用功能模块、运行环境和依赖库",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./system/*": {
      "import": "./dist/system/*.js",
      "require": "./dist/system/*.cjs",
      "types": "./dist/system/*.d.ts"
    },
    "./file/*": {
      "import": "./dist/file/*.js",
      "require": "./dist/file/*.cjs",
      "types": "./dist/file/*.d.ts"
    },
    "./network/*": {
      "import": "./dist/network/*.js",
      "require": "./dist/network/*.cjs",
      "types": "./dist/network/*.d.ts"
    },
    "./ui/*": {
      "import": "./dist/ui/*.js",
      "require": "./dist/ui/*.cjs",
      "types": "./dist/ui/*.d.ts"
    },
    "./text/*": {
      "import": "./dist/text/*.js",
      "require": "./dist/text/*.cjs",
      "types": "./dist/text/*.d.ts"
    },
    "./media/*": {
      "import": "./dist/media/*.js",
      "require": "./dist/media/*.cjs",
      "types": "./dist/media/*.d.ts"
    },
    "./renderer/*": {
      "import": "./dist/renderer/*.js",
      "require": "./dist/renderer/*.cjs",
      "types": "./dist/renderer/*.d.ts"
    },
    "./runtime/*": {
      "import": "./dist/runtime/*.js",
      "require": "./dist/runtime/*.cjs",
      "types": "./dist/runtime/*.d.ts"
    },
    "./runtime/electron-framework": {
      "import": "./dist/runtime/electron-framework/index.js",
      "require": "./dist/runtime/electron-framework/index.cjs",
      "types": "./dist/runtime/electron-framework/index.d.ts"
    },
    "./runtime/chromium-core": {
      "import": "./dist/runtime/chromium-core/index.js",
      "require": "./dist/runtime/chromium-core/index.cjs",
      "types": "./dist/runtime/chromium-core/index.d.ts"
    },
    "./runtime/runtime-manager": {
      "import": "./dist/runtime/runtime-manager/index.js",
      "require": "./dist/runtime/runtime-manager/index.cjs",
      "types": "./dist/runtime/runtime-manager/index.d.ts"
    },
    "./runtime/desktop-launcher": {
      "import": "./dist/runtime/desktop-launcher/index.js",
      "require": "./dist/runtime/desktop-launcher/index.cjs",
      "types": "./dist/runtime/desktop-launcher/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "build:electron": "electron-vite build",
    "dev:electron": "electron-vite dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "chips",
    "foundation",
    "card",
    "renderer",
    "editor"
  ],
  "author": "Chips Ecosystem Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chips-ecosystem/chips-foundation.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "electron": "^29.1.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "electron": ">=28.0.0"
  },
  "peerDependenciesMeta": {
    "electron": {
      "optional": true
    }
  }
}
